@page
@model AuthErrorModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/Style.css" />
    <style>
        body {
            font-family:Montserrat; 
        }
        div.center{
            text-align:center;
            min-height: 10em;
            vertical-align: middle
        }
    </style>
    <title>Вход в личный кабинет</title>
</head>
<body>
    <div class ="center">
       <form method="post">
            <tr align="center">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
            </tr>
            <tr align="center">
                <h3>Вход в личный кабинет </h3>
            </tr>
            <tr align ="center">
                 <label for="login" >Введите логин</label><br />
            </tr>
            <tr align="center">
                <input type="text" name="login" id="login" /><br /><br />
            </tr>
            <tr align="center">
                <label for="password">Введите пароль</label><br />
            </tr>
            <tr align="center">
                <input type="password" name="password" id="password" />
                <br />
                <br />
            </tr>
            <tr align ="center">
                <input class="ButtonStyle" type="submit" value="Войти" />
            </tr>
            <tr align="center">
                <h3 class="ErrorHeader"> Неверный логин или пароль </h3>
            </tr>
        </form>
        <span id="pass-icon"
              style="position: relative;right: -107px;top: -121px;cursor: pointer;">
            <img src="~/eye.png"
                 style="width: 30px;height: 30px;">
        </span>
    </div>
</body>
</html>
