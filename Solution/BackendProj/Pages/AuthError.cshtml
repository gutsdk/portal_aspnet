@page
@model AuthErrorModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/Style.css" />
    <script src="~/js/site.js"></script>
    <style>
        body {
            font-family: Montserrat;
            background-color: #ccc;
        }
        .center {
            text-align: center;
            vertical-align: middle;
            border-radius: 10px;
            border: 5px #ccc solid;
            box-shadow: 0 0 10px #444;
            background-color: white;
            margin-top: 6%;
            width: 50%;
            margin-left: 25%;
        }
    </style>
    <title>Вход в личный кабинет</title>
</head>
<body>
    <div class ="center">
        <form method="post">
            <tr align="center">
                <br />
                <br />
                <br />
                <img src="~/images/logo.png" style="top: 50%" />
                <br />
                <br />
                <br />
            </tr>
            <tr align="center">
                <h3>Вход в личный кабинет </h3>
            </tr>
            <tr align="center">
                <label for="login">Введите логин</label>
                <br>
            </tr>
            <tr align="center">
                <input type="text" name="login" id="login" />
                <br>
                <br>
            </tr>
            <tr align="center">
                <label for="password">Введите пароль</label>
                <br>
            </tr>
            <tr align="center">
                <input type="password" name="password" id="Pass_WORD" />
            </tr>
            <tr align="center">
                <td style="position:relative">
                    <span id="pass_icon" onclick="EyeClick()"
                          style="position: absolute;top: 59%;cursor: pointer;">
                        <img src="~/images/eye.png"
                             style="width: 50px;height: 30px;">
                    </span>
                </td>
                <br>
                <br>
            </tr>
            <tr align="center">
                <input class="ButtonStyle" type="submit" value="Войти" />
            </tr>
            <br />
            <tr align="center">
                <h5 class="ErrorHeader">Неверный логин или пароль</h5>
            </tr>
        </form>
    </div>
</body>
</html>
