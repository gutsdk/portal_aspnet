@page
@model BackendProj.Pages.EditorPageModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device=width" />
    <link rel="stylesheet" href="~/css/Style.css" />
    <link rel="stylesheet" type="text/css" href="~/css/calendar.css" />
    <script type="text/javascript" src="~/js/calendar.js"></script>
    <style>
        body {
            font-family: Montserrat;
        }

        .about {
            resize: none; /* Запрещаем изменять размер */
            width: 400px;
            height: 120px;
        }
        textarea
        {
            resize:none
        }
        .classs {
            margin-left: 15px
        }
    </style>
</head>

<body>
    <form method="post" enctype="multipart/form-data">
    <table>
        <tr>
            @if(EditorPageModel.IsEditor)
            {
                    <table>
                        <tr>
                            <td><p><img class="imgStyle" align="left" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.user.Data.Image))" width="200" height="250" name="Image" /> </p></td>
                            <td> <p>&nbsp;&nbsp;&nbsp;<textarea rows="1" cols="42" resize"="none" name="fio">@Model.user.Data.FIO</textarea></p>
                                 <p><h3 class="classs">О себе</h3></p>
                                <p class="classs"><textarea class="about" rows="5" cols="45" resize"="none" name="about">@Model.user.Data.About</textarea></p>
                            </td>
                        </tr>
                    </table>
                    <label class="fileUploadStyle">
                        <input type="file" name="photo" accept="image/*,image/jpeg">
                        Выбрать фото
                    </label>
                    <p> <h3>Логин</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="Login">@Model.user.login</textarea></li></ul>
                    <p> <h3>Роль</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="Role">@Model.user.role</textarea></li></ul>
                    <p> <h3>Дата рождения</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="birthD">@Model.user.Data.Birthday</textarea></li></ul>
                    <p> <h3>Образование</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="educ">@Model.user.Data.Education</textarea></li></ul>
                    <p> <h3>Должность</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="doljn">@Model.user.Data.Doljnost</textarea></li></ul>
                    <p> <h3>Дата приема</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="date">@Model.user.Data.DateOfEmploy</textarea></li></ul>
            }
                else if(!EditorPageModel.IsEditor)
            {
                    <table>
                        <tr>
                            <td><p><img class="imgStyle" align="left" src="data:image/jpeg;base64,@(Convert.ToBase64String(EditorPageModel.NoImg))" width="200" height="250" name="Image" /> </p></td>
                            <td>
                                <p>&nbsp;&nbsp;&nbsp;<textarea rows="1" cols="42" resize"="none" name="fio"></textarea></p>
                                <p><h3 class="classs">О себе</h3></p>
                                <p class="classs"><textarea class="about" rows="5" cols="45" resize"="none" name="about"></textarea></p>
                            </td>
                        </tr>
                    </table>
                    <label class="fileUploadStyle">
                        <input type="file" name="photo" accept="image/*,image/jpeg">
                        Выбрать фото
                    </label>
                    <p> <h3>Логин</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="Login"></textarea></li></ul>
                    <p> <h3>Пароль</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="Password"></textarea></li></ul>
                    <p> <h3>Роль</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="Role"></textarea></li></ul>
                    <p> <h3>Дата рождения</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="birthD"></textarea></li></ul>
                    <p> <h3>Образование</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="educ"></textarea></li></ul>
                    <p> <h3>Должность</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="doljn"></textarea></li></ul>
                    <p> <h3>Дата приема</h3></p>
                    <ul><li><textarea rows="1" cols="63" resize"="none" name="date"></textarea></li></ul>
            }
        <td><input class="ButtonStyle" type="submit" asp-page-handler="Save" value="Сохранить" name="save" /></td>
        <td>
            @if(EditorPageModel.IsEditor)
            {
                        <input class="ButtonStyle" type="submit" value="Удалить" asp-page-handler="Delete" name="delete" />
            }
            else
            {
                        <input class="ButtonStyle" type="submit" value="Отмена" asp-page-handler="Delete" name="delete" />
            }
        </td>
    </form>
</body>
</html>
